{
  "name": "zeropool-near-contracts",
  "version": "1.0.0",
  "license": "(MIT AND Apache-2.0)",
  "scripts": {
    "build": "npm run build:contract",
    "build:contract": "cargo build --all --target wasm32-unknown-unknown --release && cp ./target/wasm32-unknown-unknown/release/*.wasm ./out/main.wasm",
    "deploy": "./scripts/deploy",
    "redeploy": "./scripts/redeploy",
    "test": "npm run build:contract && npm run test:unit",
    "test:unit": "cargo test"
  },
  "devDependencies": {
    "ava": "^4.2.0",
    "near-api-js": "^1.0.0",
    "near-cli": "~3.3.0"
  }
}
